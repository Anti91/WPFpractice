<UserControl x:Class="WPFsumApp.View.OperationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFsumApp.View"
             xmlns:viewsmodels ="clr-namespace:WPFsumApp.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="600">
    <Grid >
        <TextBox Name="numberOne"  Margin="18,153,0,0"  Text="{Binding Path=BoundNum1, Mode=TwoWay}" PreviewTextInput="numberOne_PreviewTextInput"/>
        <TextBox Name="numberTwo"  Margin="197,153,0,0" Text="{Binding Path=BoundNum2, Mode=TwoWay}" PreviewTextInput="numberTwo_PreviewTextInput"/>
        <TextBox Name="numberSum"  Margin="378,153,0,0" Text="0" IsEnabled="False"/>
        
        <Label Name="labelEqual" Content="=" HorizontalAlignment="Left" Margin="333,153,0,0" />
        <Label Name="labelError1" Content="Label" Margin="17,181,0,0"  Visibility="Hidden"  Foreground="#FFF70606"/>
        <Label Name="labelError2" Content="Label"  Margin="197,181,0,0"  Visibility="Hidden"  Foreground="#FFF70606"/>
        <Label Name="labelNoOp" Content="Label"  Margin="17,122,0,0"  Visibility="Hidden" Foreground="#FFF70606"/>
        
        <Button Name="btnSumm" Content="Sum" Margin="422,191,0,0"   Click="btnSumm_Click"/>
        <Button Name="btnClose" Content="Close" Margin="422,17,0,0"  Click="btnExit_Click"/>
        <Button Name="btnClear" Content="Clear"  Margin="422,350,0,0" Click="Button_Click"/>

        <TextBlock ScrollViewer.VerticalScrollBarVisibility="Auto"  x:Name="tesxtBlockIpsum" HorizontalAlignment="Left" Margin="17,10,0,0" 
                   TextWrapping="Wrap" VerticalAlignment="Top" Height="112" Width="382" Text="{Binding LoremIpsumText}"/>

        <ComboBox Name="comboMathSymbol" HorizontalAlignment="Left" Margin="149,153,0,0" VerticalAlignment="Top" Width="37" ItemsSource="{Binding OperationCollection}" />

        <DataGrid Name="dGridHistory" HorizontalAlignment="Left" Height="116" Margin="17,225,0,0" VerticalAlignment="Top" Width="480" ItemsSource="{Binding Path=OperationList, Mode=OneWay }" AutoGenerateColumns="True">
           
        </DataGrid>
    </Grid>
</UserControl>
